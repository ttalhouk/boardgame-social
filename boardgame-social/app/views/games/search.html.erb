<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <div class="page-header">
      <h1 class="text-center">Search BGG for Games</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
  <%= form_tag games_result_path, remote: true, :method => 'get', class: 'input-group'  do %>
    <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search for...' %>
    <span class="input-group-btn">
      <%= button_tag type:'submit', class: "btn btn-primary", id:'search-button' do %>
      <span class="glyphicon glyphicon-search"></span> Search
      <% end %>
    </span>
  <% end %>
  </div>
</div>

<div class="row">
  <div class="loading">
    <h3 class="text-center">Loading Results ...</h3>
  </div>
  <div id="results-list">
    <!-- render partial here -->
  </div>
</div>
